{
  "manifest_version": 2,
  "name": "Redactor",
  "version": "1.0.2",
  "description": "Redact social media posts that match word filters.",
  "icons": {
    "256": "icon.png"
  },
  "options_ui": {
    "page": "options.html",
    "browser_style": true,
    "chrome_style": true
  },
  "permissions": [
    "storage"
  ],
  "applications": {
    "gecko": {
      "id": "redactor@akr.am"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.facebook.com/*",
        "*://*.twitter.com/*",
        "*://*.reddit.com/*"
      ],
      "js": [
        "browser-polyfill.js",
        "main.js"
      ]
    }
  ]
}
